<script>
    function openDeliveryModal(jobCardNo, status) {
  $('#job_card_no').val(jobCardNo);

  let statusLabel = '';
  switch (parseInt(status)) {
    case 0:
      statusLabel = '<span class="label label-info">In Progress</span>';
      break;
    case 1:
      statusLabel = '<span class="label label-success">Completed</span>';
      break;
    default:
      statusLabel = '<span class="label label-warning">Cancelled</span>';
  }

  $('#current_status_label').html(statusLabel);
  $('#deliveryModal').modal('show');
}


